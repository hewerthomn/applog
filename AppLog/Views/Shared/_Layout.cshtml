<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AppLog</title>

    @Styles.Render("~/Assets/Styles/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "App")" class="navbar-brand">
                    <img src="~/Assets/Images/navbar-brand.png" alt="AppLog" />
                </a>                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Profile", "User")">
                            <img src="" alt="avatar" />
                            <b>hewerthomn</b>                            
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-globe fa-lg"></i>
                        </a>
                    </li>
                    <li><a href="@Url.Action("Settings", "App")"><i class="fa fa-gear fa-lg"></i></a></li>
                    <li><a href="@Url.Action("Logout", "Auth")"><i class="fa fa-sign-out fa-lg text-danger"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />

        <footer>
            <small>&copy; @DateTime.Now.Year - AppLog</small>
        </footer>
    </div>

    @Scripts.Render("~/Assets/Scripts/js")    
    @RenderSection("scripts", required: false)
</body>
</html>